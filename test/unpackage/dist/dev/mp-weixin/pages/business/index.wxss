/* 水平间距 */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}
.section-header {
  text-align: center;
  padding: 30rpx 0;
}
.section-header .section-title {
  font-size: 44rpx;
  font-weight: bold;
  color: #333;
}
.menu-list {
  padding: 20rpx;
}
.menu-item {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}
.menu-item:active {
  background-color: #f8f8f8;
}
.menu-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
}
.menu-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}
.menu-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}
.menu-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
}
.menu-arrow {
  font-size: 32rpx;
  color: #ccc;
  margin-left: 20rpx;
}