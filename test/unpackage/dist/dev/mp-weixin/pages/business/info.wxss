/* 水平间距 */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}
.form-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}
.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  text-align: center;
}
.form-group {
  margin-bottom: 30rpx;
}
.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  font-weight: 500;
}
.input,
.textarea {
  width: 100%;
  padding: 20rpx;
  border: 2rpx solid #e5e5e5;
  border-radius: 12rpx;
  font-size: 28rpx;
  background-color: #fafafa;
}
.input:focus,
.textarea:focus {
  border-color: #007AFF;
  background-color: white;
}
.textarea {
  min-height: 120rpx;
  resize: none;
}
.picker {
  padding: 20rpx;
  border: 2rpx solid #e5e5e5;
  border-radius: 12rpx;
  background-color: #fafafa;
  font-size: 28rpx;
  color: #333;
}
.button-group {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
}
.btn-save,
.btn-cancel {
  flex: 1;
  padding: 24rpx 0;
  border-radius: 12rpx;
  font-size: 32rpx;
  border: none;
}
.btn-save {
  background-color: #007AFF;
  color: white;
}
.btn-save:active {
  background-color: #0066CC;
}
.btn-cancel {
  background-color: #f0f0f0;
  color: #666;
}
.btn-cancel:active {
  background-color: #e0e0e0;
}