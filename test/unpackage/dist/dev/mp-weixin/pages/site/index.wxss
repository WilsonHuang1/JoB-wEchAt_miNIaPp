}
.item-specs {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}
.spec-field {
  display: flex;
  flex-direction: column;
}
.spec-label {
  font-size: 26rpx;
  color: #333;
  margin-bottom: 8rpx;
  font-weight: 500;
}
.spec-input {
  width: 100%;
  height: 70rpx;
  padding: 0 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 6rpx;
  font-size: 28rpx;
  background-color: white;
  box-sizing: border-box;
