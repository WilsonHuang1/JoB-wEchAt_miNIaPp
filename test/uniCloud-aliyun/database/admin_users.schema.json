{
    "bsonType": "object",
    "required": ["username", "password"],
    "permission": {
        ".read": false,
        ".create": false,
        ".update": false,
        ".delete": false
    },
    "properties": {
        "_id": {
            "description": "用户ID"
        },
        "username": {
            "bsonType": "string",
            "description": "用户名"
        },
        "password": {
            "bsonType": "string",
            "description": "密码哈希"
        },
        "name": {
            "bsonType": "string",
            "description": "姓名"
        },
        "role": {
            "bsonType": "string",
            "description": "角色",
            "enum": ["admin", "viewer"]
        },
        "token": {
            "bsonType": "string",
            "description": "登录令牌"
        },
        "lastLogin": {
            "bsonType": "timestamp",
            "description": "最后登录时间"
        }
    }
}